mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="50")
		+e.btn--plus(type="button")

mixin slider-arrows()
	+b.slider-arrows-wrap.slider-arrows
		.swiper-button-next
		.swiper-button-prev

mixin article-item(i, h, t)
	.col-md-6.col-lg-4
		+b.article-item(href="#")
			+pic(`sArticles-${i}.jpg`,'bg',0)
			+e.caption
				h5!= h
				p!= t

