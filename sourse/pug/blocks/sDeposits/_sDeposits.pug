mixin sDeposits(data)
	// start sDeposits
	+b.SECTION.sDeposits.section#sDeposits&attributes(attributes)
		.container
			.row
				.col-lg-9.col-12
					h2 Мы пилим гранит из всех известных месторождений Европы и Азии
					+e.caption Наше предприятие осуществляет прямые поставки сырья из гранита и мрамора с самых разных карьеров России, Казахстана, Китая, Турции, Украины и месторождений других стран. Наше&nbsp;предприятие реализует любые проекты и любой сложности.
					+e.show-more.d-sm-none Развернуть
				.col-lg-3.d-none.d-lg-flex.align-items-center.flex-column
					+e.call-wrap
						+e.call-icon
							+icon('cargo-truck')
						+e.call-title Можем доставить камень из любой точки мира под Ваш объект
					+e.tel 8 (812) 317-12-09
					+e.tel-link(href="#") Заказать звонок
					+e.soc-wrap
						a(href="#")
							img(src="img/svg/whatsapp.svg", alt="")
						a(href="#")
							img(src="img/svg/telegram.svg", alt="")
			+e.slider--js.swiper
				.swiper-wrapper
					mixin item(i,t,c)
						.swiper-slide
							+e.item
								+pic(`sDeposits-${i}.png`,'',0)
								+e.item-title(href="#")!=t
								+e.item-caption!=c
					+item(1,`Ладожское`,`Ладожский гранит добывается в Ленинградской области в поселке Кузнечное, Приозерский район.`)
					+item(2,`Кузреченское`,`Кузреченский – российский гранит из месторождений Мурманской области.`)
					+item(3,`Жельтау-5`,`Гранит Жельтау-5 добывается в Казахстане и считается самым "красным" гранитом из Жельтаусских месторождений.`)
					+item(4,`Санарское`,`Санарского месторожение. В Троицком районе Челябинской области располагается еще одно южноуральское месторождение гранита – Нижне-Санарское.`)
					+item(5,`Западно Султаевское`,`Западно-Султаевский гранитный карьер Месторождение Западно-Султаевский гранитный карьер расположено в 2 км от деревни Султаево в Сосновском районе Челябинской области.`)
					+item(4,`Санарское`,`Санарского месторожение. В Троицком районе Челябинской области располагается еще одно южноуральское месторождение гранита – Нижне-Санарское.`)
			+e.link-wrap
				+e.link(href="#") Смотреть все месторождения
	// end sDeposits